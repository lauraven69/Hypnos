
{% extends 'base.html.twig' %}

{% block title %}Hotêl Cassiopée
{% endblock %}

{% block body%}

        <div class="container mt-4">
            <h1>Nos suites d'hôtels</h1>

            <div class="count">
                <h4>Il y a {{ suitesclassiques.getTotalItemCount }} suites classiques au total</h4>.
            </div>

            <table class ="table table-hover mt-4">
                <thead>
                    <tr>
                        <th scope="col">Suite</th>        
                        <th scope="col">Prix</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    {% for suiteclassique in suitesclassiques %}
                        <tr class="table-dark">
                            <th scope="row">Dark</th>
                            <td>{{ suiteclassique.name }}</td>
                            <td>{{ suiteclassique.price }}</td>
                            <td>{{ suiteclassique.description }}</td>
                            <td>{{ suiteclassique.image }}</td>  
                    {%endfor%}
                </tbody> 
            </table>
                <div class="navigation d-flex justify-content-center mt-4" >
                {{ knp_pagination_render(suitesclassiques) }}
                </div>
        </div>

{% endblock %}
